{
  "manifest_version": 3,
  "name": "YouTube Video Q&A Assistant",
  "version": "1.0",
  "description": "Ask questions about YouTube videos using OpenAI API",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Video Q&A"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["chat-interface.html", "chat-interface.css", "chat-interface.js"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
